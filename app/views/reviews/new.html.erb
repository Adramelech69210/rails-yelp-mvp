<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Nouvelle critique pour <%= @restaurant.name %></h1>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <div class="form-inputs">
          <%= f.input :content, label: "Commentaire", input_html: { class: 'form-control' } %>
          <%= f.input :rating, label: "Note", input_html: { class: 'form-control' } %>
        </div>

        <div class="form-actions mt-3">
          <%= f.submit "Soumettre", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
