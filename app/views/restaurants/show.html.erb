<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @restaurant.name %></h1>
          <p class="card-text"><strong>Adresse:</strong> <%= @restaurant.address %></p>
          <p class="card-text"><strong>Tel:</strong> <%= @restaurant.phone_number %></p>
          <p class="card-text"><strong>Catégorie:</strong> <%= @restaurant.category %></p>

          <h3 class="mt-4">Les commentaires:</h3>
          <ul class="list-group">
            <% @restaurant.reviews.each do |review| %>
              <li class="list-group-item">
                <%= review.content %> - <strong>Note:</strong> <%= review.rating %>
              </li>
            <% end %>
          </ul>

          <div class="mt-4">
            <%= link_to "Ajouter une review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
          </div>

          <div class="mt-4">
            <%= link_to "Modifier ce restaurant", edit_restaurant_path(@restaurant), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Retour aux restaurants", restaurants_path, class: "btn btn-secondary btn-sm" %>
            <%= button_to "Supprimer ce restaurant", @restaurant, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Êtes-vous sûr ?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
