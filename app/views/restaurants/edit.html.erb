<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Modifier le restaurant</h1>

      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name, label: "Nom", input_html: { class: 'form-control' } %>
          <%= f.input :address, label: "Adresse", input_html: { class: 'form-control' } %>
          <%= f.input :phone_number, label: "Numéro de téléphone", input_html: { class: 'form-control' } %>
          <%= f.input :category, label: "Catégorie", input_html: { class: 'form-control' } %>
        </div>

        <div class="form-actions mt-3">
          <%= f.button :submit, "Mettre à jour", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to "Voir ce restaurant", @restaurant, class: "btn btn-secondary btn-sm" %>
        <%= link_to "Retour aux restaurants", restaurants_path, class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>
